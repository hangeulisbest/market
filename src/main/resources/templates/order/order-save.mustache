{{>layout/header}}
<div class="container-fluid">
    <div class="row">
        <div class="col-mid-12 text-center">
            <h1> 주문 하기</h1>
            <br><br>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="text-center col-md-4 col-md-offset-4">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">주문할 유저의 아이디</label>
                    <input type="number" class="form-control" id="userId" placeholder="아이디를 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">배달 받을 도시</label>
                    <input type="text" class="form-control" id="city" placeholder="도시를 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">배달 받을 거리</label>
                    <input type="text" class="form-control" id="street" placeholder="동을 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">배달 받을 우편번호</label>
                    <input type="number" class="form-control" id="zipcode" placeholder="우편번호를 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">메뉴를 몇개 주문할까요?</label>
                    <input type="number" id="menu-number"><button type="button" onclick=order_main.order_menu_add()>추가하기</button>
                </div>

                <div class="form-group" id="menu-box">
                    <!--menu 추가 박스 -->
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">메뉴판</label>
                </div>
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>메뉴 아이디</th>
                        <th>메뉴 이름</th>
                        <th>메뉴 가격</th>
                    </tr>
                    <tbody>
                    {{#menuList}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{price}}</td>
                        </tr>
                    {{/menuList}}
                    </tbody>
                </table>
                <button type="button" class="btn btn-default" id="btn-order-save">주문하기</button>
                <a href="/" role="button" class="btn btn-default">취소</a>
            </form>

        </div>
    </div>
</div>
{{>layout/footer}}