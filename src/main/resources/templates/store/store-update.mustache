{{>layout/header}}
<div class="container-fluid">
    <div class="row">
        <div class="col-mid-12 text-center">
            <h1> 가게 수정</h1>
            <br><br>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="text-center col-md-4 col-md-offset-4">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">기존 카테고리</label>
                </div>
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>기존 카테고리 아이디</th>
                        <th>기존 카테고리 이름</th>
                        <th>기존 카테고리 부모</th>
                    </tr>
                    <tbody>
                        {{#store.categoryList}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            {{#parent}}
                                <td>{{parent}}</td>
                            {{/parent}}
                            {{^parent}}
                                <td>X</td>
                            {{/parent}}
                        </tr>
                        {{/store.categoryList}}
                    </tbody>
                </table>
                <div class="form-group">
                    <label for="exampleInputEmail1">기존 메뉴</label>
                </div>
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>기존 메뉴 아이디</th>
                        <th>기존 메뉴 이름</th>
                        <th>기존 메뉴 가격</th>
                    </tr>
                    <tbody>
                    {{#store.menuList}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{price}}</td>
                        </tr>
                    {{/store.menuList}}
                    </tbody>
                </table>
                <div class="form-group">
                    <label for="exampleInputEmail1">아이디</label>
                    <input type="text" class="form-control" id="id" value="{{store.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">이름</label>
                    <input type="text" class="form-control" id="name" value="{{store.name}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">도시</label>
                    <input type="text" class="form-control" id="city" value="{{store.city}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">동</label>
                    <input type="text" class="form-control" id="street" value="{{store.street}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">우편번호</label>
                    <input type="text" class="form-control" id="zipcode" value="{{store.zipcode}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">카테고리 이름 변경(존재하는 카테고리만 가능)</label>
                    <input type="text" class="form-control" id="categoryName">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">메뉴를 몇개 추가할까요?</label>
                    <input type="number" id="menu-number"><button type="button" onclick=store_main.store_update_menu_add()>추가하기</button>
                </div>

                <div class="form-group" id="menu-box">
                    <!--menu 추가 박스 -->
                </div>

                <button type="button" class="btn btn-default" id="btn-store-update">수정</button>
                <button type="button" class="btn btn-default" id="btn-store-delete">삭제</button>
                <a href="/" role="button" class="btn btn-default">돌아가기</a>
            </form>

        </div>
    </div>
</div>
{{>layout/footer}}