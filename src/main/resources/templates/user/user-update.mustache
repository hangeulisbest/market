{{>layout/header}}
<div class="container-fluid">
    <div class="row">
        <div class="col-mid-12 text-center">
            <h1> 회원 수정</h1>
            <br><br>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="text-center col-md-4 col-md-offset-4">

            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">아이디</label>
                    <input type="text" class="form-control" id="id" value="{{user.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">이름</label>
                    <input type="text" class="form-control" id="name" value="{{user.name}}" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">도시</label>
                    <input type="text" class="form-control" id="city" value="{{user.city}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">동</label>
                    <input type="text" class="form-control" id="street" value="{{user.street}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">우편번호</label>
                    <input type="text" class="form-control" id="zipcode" value="{{user.zipcode}}">
                </div>
                <button type="button" class="btn btn-default" id="btn-user-update">수정</button>
                <button type="button" class="btn btn-default" id="btn-user-delete">삭제</button>
                <a href="/" role="button" class="btn btn-default">돌아가기</a>
            </form>

        </div>
    </div>
</div>
{{>layout/footer}}